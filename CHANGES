	network-manager, nginx, ntfs-3g, ogre, openjpeg, openvpn,
	qemu, qpid-proton, qt5webengine, rauc, rockchip-mali, rsyslog,
	ruby, runc, rustc, samba4, strace, tiff, uclibc, unrar, vim,
