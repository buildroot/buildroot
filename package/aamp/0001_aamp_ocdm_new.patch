+
+	if (m_pOpenCDMSession) {
+		opencdm_destruct_session(m_pOpenCDMSession);
+		m_pOpenCDMSession = NULL;
+	}
+
+	if (m_pOpenCDMSystem) {
+		opencdm_destruct_system(m_pOpenCDMSystem);
+		m_pOpenCDMSystem = NULL;
+	}
+
+        if(m_pOutputProtection) {
