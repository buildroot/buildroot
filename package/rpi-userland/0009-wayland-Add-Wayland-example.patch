+static void
+registry_handle_global(void *data, struct wl_registry *registry,
+		       uint32_t name, const char *interface, uint32_t version)
+{
+	CUBE_STATE_T *state = data;
+
+	if (strcmp(interface, "wl_compositor") == 0) {
+		state->wl_compositor =
