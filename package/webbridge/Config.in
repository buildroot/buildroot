comment "i2ccontrol needs the package cppsdk/devices."
	depends on !BR2_PACKAGE_CPPSDK_DEVICES

config BR2_PACKAGE_PLUGIN_SPICONTROL
	bool "spicontrol"
	depends on BR2_PACKAGE_CPPSDK_DEVICES
